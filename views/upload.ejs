<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
    <div class="flex justify-between items-center px-4">
      <a class="text-sm text-blue-500" href="/profile"><i class="ri-arrow-left-s-line"></i> profile</a>
      <h2 class="leading-none text-sm">Upload Post</h2>
      <a class="text-sm" href="/feed"><i class="ri-home-line"></i> home</a>
    </div>
    <div class="flex flex-col items-center gap-2 mt-20">
      <div class="image w-[25vw] h-[25vw] rounded-full border-2 border-zinc-800 flex items-center justify-center">
        <i class="text-5xl font-light ri-image-line"></i>
      </div>
      <button id="selectpic" class="text-blue-500 capitalize">select picture</button>
    </div>
    <div class="check flex items-center justify-center gap-3 w-full mt-10">
      <h1 class="p-2  font-semibold border-b">Post</h1>
      <h1 class="p-2 opacity-20 font-semibold border-b border-b-transparent text-zinc-400">Story</h1>
    </div>
    <form id="uploadform" action="/upload" class="w-full px-6 py-3 mt-10" enctype="multipart/form-data" method="post">
      <input hidden type="radio" name="category" value="post" id="postinp" checked>
      <input hidden type="radio" name="category" value="story" id="storyinp" >
        <input id="image" hidden type="file" name="image">
        <textarea class="px-2 py-1 w-full bg-zinc-900 border-2 h-20 border-zinc-800 resize-none rounded-md outline-none" placeholder="Write a caption..." name="caption"></textarea>
        <input class="w-full px-2 py-2 bg-blue-500 rounded-md" type="submit" value="Post">
    </form>
  </div>

  <script>
    document.querySelector("#selectpic")
    .addEventListener("click", function(){
        document.querySelector("#uploadform #image").click();
    });
    document.querySelector(".check h1:nth-child(1)").addEventListener("click", function(){
      document.querySelector(".check h1:nth-child(2)").className = 'p-2 opacity-20 font-semibold text-zinc-400'
      this.className = "p-2  font-semibold border-b"
      document.querySelector("#postinp").click();
      document.querySelector("#uploadform textarea").style.display = 'initial';
    })
    document.querySelector(".check h1:nth-child(2)").addEventListener("click", function(){
      document.querySelector(".check h1:nth-child(1)").className = 'p-2 opacity-20 font-semibold text-zinc-400'
      this.className = "p-2  font-semibold border-b "
      document.querySelector("#storyinp").click();
      document.querySelector("#uploadform textarea").style.display = 'none';
    })
  </script>
