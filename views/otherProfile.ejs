<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
      <div class="nav  px-4">
        <h3 class="text-lg"><%= otherUser.username %></h3>
      </div>
      <div class="flex justify-between items-center pl-6 pr-[7vw] mt-8">
        <div class="w-[19vw] h-[19vw] bg-sky-100 rounded-full overflow-hidden">
          <img class="h-full w-full object-cover" src="/images/uploads/<%= otherUser.profileImg %>" alt="">
        </div>
        <div class="stats flex gap-5 items-center justify-between">
          <div class="flex flex-col items-center justify-center">
            <h3><%=otherUser.postId.length %></h3>
            <h4>Posts</h4>
          </div>
          <a href="/user/<%= otherUser.username %>/followers">
          <div class="flex flex-col items-center justify-center">
            <h3><%=otherUser.followers.length %></h3>
            <h4>Followers</h4>
          </div>
        </a>
        <a href="/user/<%= otherUser.username %>/following">
          <div class="flex flex-col items-center justify-center">
            <h3><%=otherUser.following.length %></h3>
            <h4>Following</h4>
          </div>
        </a>
        </div>
      </div>
      <div class="dets px-6 mt-5">
        <h3 class="text-lg mb-1"><%= otherUser.name %></h3>
        <p class="text-xs tracking-tight opacity-50"><%= otherUser.bio %></p>
      </div>
      <div class="px-5 mt-5 flex gap-2 justify-between items-center">
        <a class="w-1/3 text-center py-2 <%= user.following.includes(otherUser.id) ? 'bg-blue-500' : 'bg-zinc-800' %> text-sm rounded-md" href="/follow/<%=otherUser.id%>"><%= user.following.includes(otherUser.id) ? "Following" : "Follow" %></a>
        <a class="w-1/3 text-center py-2 bg-zinc-800 text-sm rounded-md" href="/">Contact</a>
        <a class="w-1/3 text-center py-2 bg-zinc-800 text-sm rounded-md" href="/">Message</a>
      </div>
      <div class="posts w-full flex gap-1 py-2 mt-7 flex-wrap">
        <%  if(otherUser.postId.length === 0 ){%>
          <h1 class=" h-[15vh] flex items-center justify-center w-full opacity-50 ">There is no post yet.</h1>
        <% }else{ %>
          <% otherUser.postId.reverse().forEach(function(post){ %>
            <div class="post w-[32.5%] aspect-square overflow-hidden">
              <a href="/openPost/<%=post._id%>">
              <img class="h-full w-full object-cover" src="/images/uploads/<%= post.postImg %>" alt="">
            </a>
            </div>
          <%})%>
        <%} %>
      </div>
  </div>
<% include ./partials/footer.ejs %>