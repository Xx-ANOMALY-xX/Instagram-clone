<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-900 px-4 py-5 text-white">
        <div class="w-full px-4 flex justify-between items-center gap-3">
           <div class="flex items-center gap-3">
            <a href="/feed"><i class="ri-arrow-left-line text-2xl "></i></a>
            <h1 class="text-xl font-medium -mt-1">Notifications</h1>
           </div>
           <a href="/clear"><h1 class="text-md bg-zinc-800 px-3 py-1 rounded-md font-medium -mt-1 ">Clear <i class="ri-notification-3-line"></i></h1></a>
        </div>
        <div class="notifications mt-10 px-4">
            <% user.notifications.reverse().forEach(function(notification){%>
            <div class="notification flex gap-4 items-center mt-6 w-full">
                <div class="img h-[12vw] aspect-square rounded-full overflow-hidden ">
                    <img class="h-full w-full object-cover" src="/images/uploads/<%=notification.fromUser.profileImg%>" alt="">
                </div>
                <div class="content w-[60%]">
                    <h1 class=" font-semibold"><%=notification.content%></h1>
                </div>
                <% if(notification.post){ %>
                    <div class="img h-[13vw] aspect-square ml-auto ">
                        <img class="h-full w-full object-cover" src="/images/uploads/<%= notification.post.postImg %>" alt="">
                    </div>
                <%}%>
            </div>
            <%})%>
        </div>
    </div>
    <% include ./partials/footer.ejs %>